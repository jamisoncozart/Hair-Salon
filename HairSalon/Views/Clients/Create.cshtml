@{Layout = "_Layout";}

@model HairSalon.Models.Client

@using (Html.BeginForm())
{
  <h4>Add a new Client</h4>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Haircut)
  @Html.TextBoxFor(model => model.Haircut)

  <input type="hidden" name="StylistId" id="StylistId" value="@ViewBag.Stylist.StylistId" />
  
  <input type="submit" value="Submit" class="button btn btn-success"/>
  <p>@Html.ActionLink("Back to Stylist", "Show", "Stylists", new { id = ViewBag.Stylist.StylistId }, new { @class = "btn btn-danger" } )</p>
}
